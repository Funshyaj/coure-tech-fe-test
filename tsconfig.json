{
  "compilerOptions": {
    "jsx": "react-jsx", // or "react" if using React < 17
    "esModuleInterop": true, // Recommended for module imports
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "types": ["jest", "node"], // Include Jest types
    "allowSyntheticDefaultImports": true // Enable default imports for React
  },
  "include": ["src/**/*", "tests/**/*"]
}
